{
  "name": "tauri-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:release": "TAURI_SIGNING_PRIVATE_KEY_PATH=${TAURI_SIGNING_PRIVATE_KEY_PATH:-$HOME/.tauri/buzz.key} TAURI_SIGNING_PRIVATE_KEY_PASSWORD=${TAURI_SIGNING_PRIVATE_KEY_PASSWORD:?Set TAURI_SIGNING_PRIVATE_KEY_PASSWORD} tauri build",
    "build:install": "pnpm build:release && cp -r src-tauri/target/release/bundle/macos/*.app /Applications/",
    "notarize": "xcrun notarytool submit src-tauri/target/release/bundle/dmg/*.dmg --keychain-profile buzz-notarize --wait",
    "staple": "xcrun stapler staple src-tauri/target/release/bundle/dmg/*.dmg",
    "release": "pnpm tauri build && pnpm notarize && pnpm staple",
    "release:install": "pnpm tauri build && cp -r src-tauri/target/release/bundle/macos/*.app /Applications/ && pnpm notarize && pnpm staple",
    "version:bump": "bash scripts/bump-version.sh",
    "release:github": "bash scripts/release-github.sh",
    "release:full": "echo 'üêù Full release pipeline...' && pnpm release && pnpm release:github",
    "test": "vitest run",
    "preview": "vite preview",
    "tauri": "tauri",
    "www:dev": "cd www && pnpm dev",
    "www:build": "cd www && pnpm build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.575.0",
    "radix-ui": "^1.4.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^4.0.18"
  }
}
